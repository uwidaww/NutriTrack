<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultPertanyaan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_sayur"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/profile_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/logo_bawah" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Program sudah siap!"
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hasil"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/hasil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"/>

        <View
            android:id="@+id/view"
            android:layout_width="319dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/text_ulang"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/back_proses"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/button_backHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/jost_medium"
                android:text="Kembali"
                android:textColor="@color/purple"
                android:background="@drawable/btn_outline"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/button_nextHasil"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:fontFamily="@font/jost_medium"
                android:text="Selanjutnya" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>