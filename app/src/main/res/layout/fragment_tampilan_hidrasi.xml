<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilanHidrasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:fontFamily="@font/jost_medium"
                android:text="Hidrasi"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/profile_bg"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_medium"
                android:text="Hari Ini"
                android:textSize="18dp" />

            <ProgressBar
                android:id="@+id/progressBar6"
                style="?android:attr/progressBarStyle"
                android:layout_width="131dp"
                android:layout_height="123dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:indeterminateBehavior="repeat" />

            <HorizontalScrollView
                android:id="@+id/mlMinum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100ml"
                        android:textColor="@color/purple"
                        android:background="@drawable/btn_outline"
                        android:fontFamily="@font/jost_medium"
                        android:textSize="20dp"
                        android:layout_marginEnd="5dp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250ml"
                        android:fontFamily="@font/jost_medium"
                        android:textSize="20dp"
                        android:textColor="@color/purple"
                        android:background="@drawable/btn_outline"
                        android:layout_marginEnd="5dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500ml"
                        android:fontFamily="@font/jost_medium"
                        android:textSize="20dp"
                        android:textColor="@color/purple"
                        android:background="@drawable/btn_outline"
                        android:layout_marginEnd="5dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1l"
                        android:fontFamily="@font/jost_medium"
                        android:textColor="@color/purple"
                        android:background="@drawable/btn_outline"
                        android:textSize="20dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/addDoneMinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_refresh"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="10dp"
                    android:text="Button"
                    android:src="@drawable/refresh"
                    android:background="@drawable/btn_circulor"/>

                <ImageButton
                    android:id="@+id/button_done"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="10dp"
                    android:text="Button"
                    android:src="@drawable/check"
                    android:background="@drawable/btn_circulor"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/buttonBackTglAktivitas"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/tglPermingguAktivitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="85dp"
                android:fontFamily="@font/jost_medium"
                android:text="Nov, 22 -28"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/buttonNextTglAktivitas"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/profile_bg"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_medium"
                android:text="Minggu Ini"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_medium"
                android:text="Rata-rata...."
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>